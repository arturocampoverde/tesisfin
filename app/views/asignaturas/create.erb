<%=form_for @asignatura , :url => {:action=>"create"} do |f| %>

<font SIZE="5" FACE="arial" color ="#BF0000">Formulario Incorrecto</font>
 <br>
<p>
  <%=f.label "NOMBRE"%>
  <%=f.text_field :asig_nombre %>
</p>
 

<p>
  <%=f.label "ABREVIATURA"%>
  <%=f.text_field :asig_abreviat %>
</p>

<%=  f.submit "GUARDAR" %>

 
<% if @asignatura.errors.any? %>

            <div align="left">             
                <ul><H1><font SIZE="4" FACE="arial" color ="#BF0000"> ERRORES</font>      </H1>      
                  <% for message in @asignatura.errors.full_messages %>                          
                    <li><%= message %></li>
                    <br> 
                 <% end %>
                </ul>              
            </div>
          <% end %>


<%end%>