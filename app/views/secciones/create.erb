<html>
<body>
<script language="JavaScript" type="text/javascript" src="ajax.js"></script>

<%=form_for @seccion , :url => {:action=>"create"} do |c| %>

<font SIZE="5" FACE="arial" color ="#BF0000">Formulario Incorrecto</font>


<div onkeypress="return isNumberKey(event)">  
<p>
  <%=c.label "NOMBRE"%>
  <%=c.text_field :secc_nombre %>
</p>
</div>

<%#*<p>%>
  <%#=c.label "ESTADO"%>
  <%#=c.text_field :secc_estado %>
<%#*</p>%>

<%=c.submit "GUARDAR" %>



<% if @seccion.errors.any? %>

            <div align="left">             
                <ul><H1><font SIZE="4" FACE="arial" color ="#BF0000"> ERRORES</font>      </H1>      
                  <% for message in @seccion.errors.full_messages %>                          
                    <li><%= message %></li>
                    <br> 
                 <% end %>
                </ul>              
            </div>
          <% end %>


<%end%>

</body>
</html>